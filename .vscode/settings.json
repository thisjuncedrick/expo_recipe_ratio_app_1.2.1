{
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.organizeImports": "explicit",
		"source.sortMembers": "always"
	},
	"editor.trimAutoWhitespace": false,

	"files.exclude": {
		"node_modules/": true,
		".gitignore": true,
		".expo": true,
		".prettierrc": true,
		"babel.config.js": true,
		"package-lock.json": true
	}
}
